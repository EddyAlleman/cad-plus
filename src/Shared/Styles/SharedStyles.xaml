<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:Xarial.CadPlus.Plus.Shared.Styles">
    <DataTemplate x:Key="MetroWindowIconTemplate">
        <Image Source="{Binding}" RenderOptions.BitmapScalingMode="Fant" Margin="2"/>
    </DataTemplate>
    <DataTemplate x:Key="MetroWindowTitleTemplate">
        <TextBlock Text="{Binding}" VerticalAlignment="Center" Margin="10 0 10 0"
                       FontSize="18" FontWeight="Bold"/>
    </DataTemplate>
</ResourceDictionary>