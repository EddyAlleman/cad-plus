                                    <TextBox Text="{Binding Path=Filter, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="2" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Macros" Grid.Row="2">
                            <cmnctrls:PathListBox Filters="{Binding Path=MacroFilesFilter}" 
