                <dz:DockItem TabText="Summary" Title="Summary" ShowAction="{dz:ShowAsDockPositionAction DockPosition=Left, Source=2}">
                    
                </dz:DockItem>
                <dz:DockItem TabText="Log" Title="Log" ShowAction="{dz:ShowAsDockPositionAction DockPosition=Document, Source=4}">
                    
                </dz:DockItem>
                <dz:DockItem TabText="Results" Title="Results" ShowAction="{dz:ShowAsSidePaneAction Side=Bottom, Size=*, Target=4, Source=3}">
                    
